<div class="hwfwm-status">

  <!-- TOP: Attributes (full width) -->
  <div class="hwfwm-status__top">
    {{> "systems/hwfwm-system/templates/actor/tabs/status/attributes.hbs" }}
  </div>

  <!-- BOTTOM: Resources (left) + Defense (right) -->
  <div class="hwfwm-status__bottom">
    <div class="hwfwm-card hwfwm-card--muted">
      <div class="hwfwm-card__title">Resources</div>
      <div class="hwfwm-muted">
        Resources will be added next.
      </div>
    </div>

    <div class="hwfwm-card hwfwm-card--muted">
      <div class="hwfwm-card__title">Defense</div>
      <div class="hwfwm-muted">
        Defense will be added after Resources.
      </div>
    </div>
  </div>

</div>
