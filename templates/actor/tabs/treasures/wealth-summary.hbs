{{!-- templates/actor/tabs/treasures/wealth-summary.hbs --}}
{{!-- Phase 4 (optional): Read-only wealth summary --}}
{{!-- Safe fallback: renders nothing if no summary data exists --}}

{{#if (and treasures treasures.wealthSummary)}}
  <div class="hwfwm-res-separator">Wealth Summary</div>

  <div class="hwfwm-treasure-summary">
    {{!-- Coin totals --}}
    {{#if (and treasures.wealthSummary.coins (or treasures.wealthSummary.coins.LSC treasures.wealthSummary.coins.ISC treasures.wealthSummary.coins.BSC treasures.wealthSummary.coins.SSC treasures.wealthSummary.coins.GSC treasures.wealthSummary.coins.DSC))}}
      <div class="hwfwm-summary-block">
        <div class="hwfwm-summary-title">Coins</div>
        <div class="hwfwm-summary-grid">
          {{#each treasures.wealthSummary.coins as |v k|}}
            <div class="hwfwm-summary-row">
              <div class="hwfwm-summary-label">{{k}}</div>
              <div class="hwfwm-summary-value">{{v}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}

    {{!-- Misc totals by rarity (optional) --}}
    {{#if (and treasures.wealthSummary.byRarity (or treasures.wealthSummary.byRarity.common treasures.wealthSummary.byRarity.uncommon treasures.wealthSummary.byRarity.rare treasures.wealthSummary.byRarity.epic treasures.wealthSummary.byRarity.legendary))}}
      <div class="hwfwm-summary-block">
        <div class="hwfwm-summary-title">Misc (by Rarity)</div>
        <div class="hwfwm-summary-grid">
          {{#each treasures.wealthSummary.byRarity as |v k|}}
            <div class="hwfwm-summary-row">
              <div class="hwfwm-summary-label">{{k}}</div>
              <div class="hwfwm-summary-value">{{v}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
{{/if}}
