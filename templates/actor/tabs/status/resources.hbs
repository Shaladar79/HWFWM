<div class="hwfwm-card">
  <div class="hwfwm-card__title">Resources</div>

  <div class="hwfwm-grid">

    <!-- Life -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Life</label>
      <div class="hwfwm-resource-row">
        <input type="number"
               name="system.resources.life.value"
               value="{{system.resources.life.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input type="number"
               name="system.resources.life.max"
               value="{{system.resources.life.max}}"
               placeholder="0" />
      </div>
    </div>

