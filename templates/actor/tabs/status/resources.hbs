               value="{{system.resources.mana.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Stamina (4 digits each) -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Stamina</label>
      <div class="hwfwm-resource-row">
        <input type="number"
               name="system.resources.stamina.value"
               value="{{system.resources.stamina.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
