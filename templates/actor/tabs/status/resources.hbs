        <span class="hwfwm-resource-sep">/</span>
        <input type="number"
               name="system.resources.reaction.max"
               value="{{system.resources.reaction.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Shielding (single value, 4 digits) -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Shielding</label>
      <input class="hwfwm-shielding-input"
             type="number"
             name="system.resources.shielding.value"
