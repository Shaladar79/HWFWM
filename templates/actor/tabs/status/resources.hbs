<div class="hwfwm-card">
  <div class="hwfwm-card__title">Resources</div>

  <div class="hwfwm-grid">

    <!-- LifeForce (4 digits each) -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">LifeForce</label>
      <div class="hwfwm-resource-row">
        <input type="number"
               name="system.resources.lifeForce.value"
               value="{{system.resources.lifeForce.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input type="number"
               name="system.resources.lifeForce.max"
               value="{{system.resources.lifeForce.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Trauma (3 digits each) -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Trauma</label>
      <div class="hwfwm-resource-row hwfwm-resource-row--trauma">
        <input type="number"
