<div class="hwfwm-card">
  <div class="hwfwm-card__title">Resources</div>

  <div class="hwfwm-resources-grid">

    <!-- Row 1: LifeForce (val/max) + Trauma (val/max) -->
    <div class="hwfwm-field hwfwm-res-row hwfwm-res-row--2col">
      <label class="hwfwm-label">LifeForce</label>
      <div class="hwfwm-resource-pair">
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.lifeForce.value"
               value="{{system.resources.lifeForce.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.lifeForce.max"
               value="{{system.resources.lifeForce.max}}"
               placeholder="0" />
      </div>

      <label class="hwfwm-label hwfwm-label--inline">Trauma</label>
      <div class="hwfwm-resource-pair">
        <input class="hwfwm-input-3d" type="number"
               name="system.resources.trauma.value"
               value="{{system.resources.trauma.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input class="hwfwm-input-3d" type="number"
               name="system.resources.trauma.max"
               value="{{system.resources.trauma.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Row 2: Shielding (single) + Armor (val/max) -->
    <div class="hwfwm-field hwfwm-res-row hwfwm-res-row--2col">
      <label class="hwfwm-label">Shielding</label>
      <input class="hwfwm-input-4d" type="number"
             name="system.resources.shielding.value"
             value="{{system.resources.shielding.value}}"
             placeholder="0" />

      <label class="hwfwm-label hwfwm-label--inline">Armor</label>
      <div class="hwfwm-resource-pair">
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.armor.value"
               value="{{system.resources.armor.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.armor.max"
               value="{{system.resources.armor.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Row 3: Mana (val/max) + Stamina (val/max) -->
    <div class="hwfwm-field hwfwm-res-row hwfwm-res-row--2col">
      <label class="hwfwm-label">Mana</label>
      <div class="hwfwm-resource-pair">
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.mana.value"
               value="{{system.resources.mana.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.mana.max"
               value="{{system.resources.mana.max}}"
               placeholder="0" />
      </div>

      <label class="hwfwm-label hwfwm-label--inline">Stamina</label>
      <div class="hwfwm-resource-pair">
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.stamina.value"
               value="{{system.resources.stamina.value}}"
               placeholder="0" />
        <span class="hwfwm-resource-sep">/</span>
        <input class="hwfwm-input-4d" type="number"
               name="system.resources.stamina.max"
               value="{{system.resources.stamina.max}}"
               placeholder="0" />
      </div>
    </div>

    <!-- Row 4: Pace (single) + Reaction (single) -->
    <div class="hwfwm-field hwfwm-res-row hwfwm-res-row--2col">
      <label class="hwfwm-label">Pace</label>
      <input class="hwfwm-input-4d" type="number"
             name="system.resources.pace.value"
             value="{{system.resources.pace.value}}"
             placeholder="0" />

      <label class="hwfwm-label hwfwm-label--inline">Reaction</label>
      <input class="hwfwm-input-4d" type="number"
             name="system.resources.reaction.value"
             value="{{system.resources.reaction.value}}"
             placeholder="0" />
    </div>

  </div>
</div>

</div>
