<div class="hwfwm-card">
  <div class="hwfwm-card__title">Defense</div>

  <div class="hwfwm-grid">

    <!-- Defense Total -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Defense (Total)</label>
      <input class="hwfwm-input-4d"
             type="number"
             name="system.defense.total"
             value="{{system.defense.total}}"
             placeholder="0" />
    </div>

    <!-- Defense Breakdown -->
    <div class="hwfwm-field">
      <label class="hwfwm-label">Base</label>
      <input class="hwfwm-input-4d"
             type="number"
             name="system.defense.base"
             value="{{system.defense.base}}"
             placeholder="0" />
    </div>

    <div class="hwfwm-field">
      <label class="hwfwm-label">Modifier</label>
      <input class="hwfwm-input-4d"
             type="number"
             name="system.defense.mod"
             value="{{system.defense.mod}}"
             placeholder="0" />
    </div>

  </div>
</div>
