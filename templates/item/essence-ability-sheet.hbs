<form class="hwfwm-system sheet item essence-ability" autocomplete="off">

  <!-- HEADER -->
  <header class="sheet-header hwfwm-card">
    <div class="hwfwm-card__title">
      <input type="text"
             name="name"
             value="{{item.name}}"
             placeholder="Essence Ability Name" />
    </div>
  </header>

  <!-- MAIN BODY -->
  <section class="sheet-body">

    <div class="hwfwm-card">
      <div class="hwfwm-card__title">Essence Binding</div>

      <div class="hwfwm-spec-add">
        <label>Bound Attribute</label>
        <select name="system.boundAttribute">
          <option value="">— Select Attribute —</option>
          <option value="power" {{#if (eq system.boundAttribute "power")}}selected{{/if}}>Power</option>
          <option value="speed" {{#if (eq system.boundAttribute "speed")}}selected{{/if}}>Speed</option>
          <option value="spirit" {{#if (eq system.boundAttribute "spirit")}}selected{{/if}}>Spirit</option>
          <option value="recovery" {{#if (eq system.boundAttribute "recovery")}}selected{{/if}}>Recovery</option>
        </select>
      </div>

      <div class="hwfwm-spec-add">
        <label>Essence</label>
        <select name="system.essenceKey">
          <option value="">— Select Essence —</option>
          {{#each essenceCatalog as |e key|}}
            <option value="{{key}}" {{#if (eq key ../system.essenceKey)}}selected{{/if}}>{{e.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="hwfwm-spec-add">
        <label>Confluence</label>
        <select name="system.confluenceKey">
          <option value="">— Select Confluence —</option>
          {{#each confluenceEssenceCatalog as |c key|}}
            <option value="{{key}}" {{#if (eq key ../system.confluenceKey)}}selected{{/if}}>{{c.name}}</option>
          {{/each}}
        </select>
      </div>

    </div>

    <div class="hwfwm-card">
      <div class="hwfwm-card__title">Description</div>

      <textarea name="system.description"
                rows="6"
                placeholder="Describe the essence ability...">{{system.description}}</textarea>
    </div>

  </section>

</form>
